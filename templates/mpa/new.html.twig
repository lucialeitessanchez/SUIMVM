          {{ form_row(form.mpa_2, {'attr': {'class': 'form-control'}}) }}
          {{ form_row(form.mpa_3, {'attr': {'class': 'form-select nomenclador-TIPO_LUGAR'}}) }}
          {{ form_row(form.mpa_4, {'attr': {'class': 'form-control'}}) }}
