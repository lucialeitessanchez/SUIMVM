            {{ form_widget(form.pgcsj_3) }}
        </div>
    </div>    
    <div class="row g-3">
        <div class="col-md-3">
            {{ form_row(form.pgcsj4) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.pgcsj5) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.pgcsj6) }}
        </div>
        <div class="col-md-6">
