        <span class="badge badge-caso">{{ caso.idCaso }}</span>
      </span>
    </div>
    {{ form_start(form) }}
    
    <div class="row g-3">
        <div class="col-md-3">
            {{ form_row(form.pgcsj1) }}
        </div>
        <div class="col-md-3">
